<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MakeRequest">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:textSize="32sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="please , add message and upload image to can you find doner for you."/>

     <EditText
         android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:minLines="6"
         android:maxLines="10"
         android:layout_margin="8dp"
         android:padding="10dp"
         android:hint="message"
         android:cursorVisible="false"
         android:textColorHint="#000"
         android:gravity="top"
         android:textColor="#000000"
         android:background="@drawable/border_background_message"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">
            <ImageView
                android:id="@+id/img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_photo"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/choose_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="choose photo"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:textSize="24sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <Button
            android:id="@+id/post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="post request"
            android:background="#DC0D20"
            android:layout_margin="8dp" />
    </LinearLayout>
</ScrollView>